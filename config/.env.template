# ============================================
# TELEGRAM API CREDENTIALS
# ============================================
# Get from: https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# ============================================
# DISCORD BOT CREDENTIALS
# ============================================
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ============================================
# TWITTER/X API CREDENTIALS
# ============================================
# Get from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# ============================================
# BLOCKCHAIN RPC ENDPOINTS
# ============================================
# Ethereum RPC (use Infura, Alchemy, or your own node)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Solana RPC (use QuickNode, Helius, or public endpoint)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# WALLET CONFIGURATION
# ============================================
# WARNING: Keep these absolutely secret!
# Ethereum wallet private key (with 0x prefix)
ETH_PRIVATE_KEY=0xyour_ethereum_private_key_here

# Solana wallet private key (base58 encoded)
SOL_PRIVATE_KEY=your_solana_private_key_here

# Trading wallet address (for monitoring)
WALLET_ADDRESS=your_wallet_address_here

# ============================================
# TRADING PARAMETERS
# ============================================
# Initial trade amount in USD
TRADE_AMOUNT_USD=10

# Profit target (500 = 500% = 5x)
PROFIT_TARGET_PERCENT=500

# Stop loss percentage (50 = 50% loss)
STOP_LOSS_PERCENT=50

# Trailing stop loss (20 = 20% below peak)
TRAILING_STOP_PERCENT=20

# Maximum slippage tolerance (5 = 5%)
MAX_SLIPPAGE_PERCENT=5

# Time-based exit (hours, 0 = disabled)
MAX_HOLD_TIME_HOURS=24

# Maximum concurrent positions
MAX_POSITIONS=5

# ============================================
# EXTERNAL API KEYS
# ============================================
# Honeypot.is API (for scam detection)
HONEYPOT_API_KEY=your_honeypot_api_key_here

# DEXTools API (for token analysis)
DEXTOOLS_API_KEY=your_dextools_api_key_here

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/heist_engine

# Redis connection string
REDIS_URL=redis://localhost:6379/0

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/heist_engine.log

# Enable colored console output (true/false)
LOG_COLOR_ENABLED=true

# ============================================
# OPERATIONAL SETTINGS
# ============================================
# Enable dry run mode (no real trades, true/false)
DRY_RUN_MODE=true

# Scan interval in seconds
SCAN_INTERVAL_SECONDS=5

# Minimum hype score to trigger analysis (0-100)
MIN_HYPE_SCORE=70

# Minimum contract safety score to trade (0-100)
MIN_SAFETY_SCORE=80

# ============================================
# NOTIFICATION SETTINGS
# ============================================
# Telegram notification chat ID (your personal chat)
NOTIFICATION_CHAT_ID=your_telegram_chat_id_here

# Enable trade notifications (true/false)
ENABLE_NOTIFICATIONS=true

# ============================================
# ADVANCED SETTINGS
# ============================================
# Gas price multiplier for faster transactions (1.0 = normal, 1.5 = 50% faster)
GAS_PRICE_MULTIPLIER=1.2

# Transaction timeout in seconds
TX_TIMEOUT_SECONDS=60

# Retry attempts for failed transactions
MAX_RETRY_ATTEMPTS=3

# ============================================
# END OF CONFIGURATION
# ============================================

